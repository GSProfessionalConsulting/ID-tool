<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Edit Course</h1>
      <%= link_to "Back to Course", designer_course_path(@course), 
          class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors" %>
    </div>

    <div class="bg-white rounded-lg shadow-md p-8">
      <%= form_with(model: [:designer, @course], local: true, class: "space-y-6") do |form| %>
        <% if @course.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <h3 class="text-red-800 font-medium mb-2">
              <%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:
            </h3>
            <ul class="text-red-700 text-sm list-disc list-inside">
              <% @course.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="md:col-span-2">
            <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :title, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Enter course title" %>
          </div>

          <div class="md:col-span-2">
            <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description, 
                rows: 4,
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Enter course description" %>
          </div>

          <div>
            <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :status, 
                options_for_select([
                  ['Draft', 'draft'],
                  ['Published', 'published'],
                  ['Archived', 'archived']
                ], @course.status),
                {},
                { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
          </div>

          <div>
            <%= form.label :estimated_duration, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :estimated_duration, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "e.g., 2 hours, 30 minutes" %>
          </div>

          <div>
            <%= form.label :target_audience, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :target_audience, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "e.g., Beginners, Managers, Developers" %>
          </div>

          <div class="md:col-span-2">
            <%= form.label :learning_objectives, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :learning_objectives, 
                rows: 3,
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "List the key learning objectives for this course" %>
          </div>
        </div>

        <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", designer_course_path(@course), 
              class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors" %>
          <%= form.submit "Update Course", 
              class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
