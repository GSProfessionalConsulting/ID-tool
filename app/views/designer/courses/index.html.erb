<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">My Courses</h1>
    <%= link_to "Create New Course", new_designer_course_path, 
        class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors" %>
  </div>

  <% if @courses.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @courses.each do |course| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="flex justify-between items-start mb-4">
            <h3 class="text-lg font-semibold text-gray-900"><%= course.title %></h3>
            <span class="px-2 py-1 text-xs rounded-full <%= course.status == 'published' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <%= course.status.humanize %>
            </span>
          </div>
          
          <p class="text-gray-600 mb-4"><%= truncate(course.description, length: 120) %></p>
          
          <div class="text-sm text-gray-500 mb-4">
            <%= course.total_lessons %> lessons â€¢ 
            <%= course.published_lessons %> published â€¢ 
            Updated <%= time_ago_in_words(course.updated_at) %> ago
          </div>
          
          <div class="flex gap-2">
            <%= link_to "View", designer_course_path(course), 
                class: "text-blue-600 hover:text-blue-800 font-medium" %>
            <%= link_to "Edit", edit_designer_course_path(course), 
                class: "text-green-600 hover:text-green-800 font-medium" %>
            <% if course.draft? %>
              <%= link_to "Preview", preview_designer_course_path(course), 
                  class: "text-purple-600 hover:text-purple-800 font-medium" %>
            <% end %>
            <%= link_to "Export", export_designer_course_path(course), 
                class: "text-gray-600 hover:text-gray-800 font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-gray-400 mb-4">
        <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No courses yet</h3>
      <p class="text-gray-600 mb-4">Get started by creating your first course</p>
      <%= link_to "Create Your First Course", new_designer_course_path, 
          class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors" %>
    </div>
  <% end %>
</div>
