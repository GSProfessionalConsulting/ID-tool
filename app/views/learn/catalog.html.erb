<div class="container mx-auto px-4 py-8">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">Available Courses</h1>
    <p class="text-gray-600">Browse and access published courses</p>
  </div>

  <% if @courses.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @courses.each do |course| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= course.title %></h3>
          <p class="text-gray-600 mb-4"><%= truncate(course.description, length: 120) %></p>
          
          <div class="text-sm text-gray-500 mb-4">
            <%= course.total_lessons %> lessons â€¢ 
            Estimated <%= course.estimated_duration || 'N/A' %>
          </div>
          
          <% if course.learning_objectives.present? %>
            <div class="mb-4">
              <h4 class="text-sm font-medium text-gray-900 mb-2">Learning Objectives:</h4>
              <ul class="text-sm text-gray-600 list-disc list-inside">
                <% course.learning_objectives.split("\n").first(3).each do |objective| %>
                  <li><%= objective.strip %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">
              Published <%= time_ago_in_words(course.updated_at) %> ago
            </span>
            <%= link_to "Start Course", learn_course_path(course), 
                class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-gray-400 mb-4">
        <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No courses available</h3>
      <p class="text-gray-600">Check back later for new courses</p>
    </div>
  <% end %>
</div>
